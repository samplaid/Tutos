// menu.style.css

/* Top and Bottom borders go out */
.navbar-nav>li> a:before, .navbar-nav>li> a:after
{
    position: absolute;
    left: 0px;
    width: 100%;
    height: 2px;
    background: #9B8E68;
    content: "";
    opacity: 0;
    transition: all 0.3s;
}

.navbar-nav>li> a:before
{
    top: 0px;
    transform: translateY(10px);
}

.navbar-nav>li> a:after
{
    bottom: 0px;
    transform: translateY(-10px);
}

.navbar-nav>li> a:hover:before, .navbar-nav>li> a:hover:after
{
    opacity: 1;
    transform: translateY(0px);
}

.nav .dropdown:hover > .dropdown-menu {
    display: block;
}

nav {
  margin-top: 0px;
}

nav > li > a {
    color: #262837;
    margin: 0px 8px;
    vertical-align: middle;
    line-height: 2em;
    text-align: center;
    text-decoration: none;
    border-radius: 4px;
}

.navbar-default {
    background-color: #fff;
    border-color: #fff;
    margin-bottom: 0px;
    box-shadow: 0px 3px 20px 2px rgba(0, 0, 0, .2);   //262837  9B8E68  
}

.nav .open> a {
    background-color: lighten(#9B8E68, 30%);    // #C0B176; 9B8E68

}

:host li {
    min-width: 100px;
    text-align: center;
    transition: 0.5s;
}

:host ul:not(.dropdown-menu)>li:hover:not(.dropdown) {
    font-size: 1.2em;
}
