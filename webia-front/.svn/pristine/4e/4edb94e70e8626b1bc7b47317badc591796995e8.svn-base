<div class="relative form">

    <!-- The tabs displaying the different pdf files -->
    <div class="row">
        <div class="col-md-10">
            <tabset [justified]="true" *ngIf="!!editingRequests && editingRequests.length > 1">
                <tab heading="{{editingRequest.agent}}" *ngFor="let editingRequest of editingRequests" (select)='selectTab($event)'></tab>
            </tabset>
        </div>
        <div class="col-md-2">
            <div class="pull-right" style="margin-right:1%">
                <button class="btn btn-xs btn-primary" (click)="download()">
                    <i class="fa fa-download" title="Download"></i>
                </button>
                <button class="btn btn-xs btn-primary" (click)="refresh()">
                    <i class="fa fa-refresh" title="Refresh"></i>
                </button>
                <button class="btn btn-xs btn-default" (click)="close()">
                    <i class="fa fa-window-close" title="Close"></i>
                </button>
            </div>
        </div>        
    </div>    

    <simulation #simulationComponent *ngIf="simulationFileObservable"    
        [loadObservable]="simulationFileObservable"
        [downloadable]="false"
        [closeable]="false"
        [refreshable]="false"
        [isWrapped]="false">
    </simulation>
</div>