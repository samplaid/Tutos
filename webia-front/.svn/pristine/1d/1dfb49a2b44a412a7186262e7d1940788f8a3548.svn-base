<!-- Asset Manager -->
<div *ngIf="fund" class="form-horizontal relative" >
  <div [ngBusy]="[busy]">
    <div class="form-group">        
        <label class="w-col-md-4 control-label">Asset Manager</label>
        <div class="w-col-md-8">
            <search-agent [(agentId)]="fund.assetManager" [type]="'AM'" [disabled]="disabled" (onChange)="setManagerAgent($event)"></search-agent>
        </div>
        <label class="w-col-md-5 control-label">Asset management fees(TTC)</label>
        <div class="form-group w-col-md-5">
            <percent-amount    [(percent)]="fund.assetManagerFee" 
                                [(flatAmount)]="fund.finFeesFlatAmount"
                                [(currency)]="fund.assetManFeeCcy"
                                [(currencyList)]="currencyList"
                                [defaultCurrency]="defaultCurrency"
                                [disabled]="disabled">
                <label for="allInFeesId" class="control-label marginRight5">All in fees</label>
                <div class="checkbox">
                    <label class="paddingTop2">
                        <input  id="allInFeesId" name="allInFees" type="checkbox" [disabled]="disabled"
                                [(ngModel)]="fund.exAllInFees" [checked]="fund.exAllInFees">
                        <span class="cr"><i class="cr-icon">&#x2714;</i></span>
                    </label>
                </div>
            </percent-amount >            
        </div>       
    </div>
   
    <!-- Contact -->
    <div class="form-group">
        <label class="w-col-md-4 control-label">Contact person</label>
        <div class="w-col-md-8">
            <div class="form-inline">
                <agc-add-select [disabled]="(fund && !fund.assetManager) || disabled" css="width-fluid-f-77 form-control input-sm" 
                                [(agent)]="managerAgent" [(contactId)]="fund.salesRep" fidFasLimitedList=true showAdd=false></agc-add-select>
            </div>            
        </div>
         <!-- Performance Fee -->					
        <label class="w-col-md-5 control-label">Performance fees</label>
        <div class="w-col-md-6 nopadding">
            <textarea autosize [disabled]="disabled" class="form-control paddingVertical" name="performanceFee" id="performanceFee" rows="2" [(ngModel)]="fund.performanceFee" maxlength="1000" ></textarea>							
        </div>
    </div>
    <div class="form-group">
        <label class="w-col-md-4 control-label">Custodian Bank</label>
        <div class="w-col-md-8">
            <search-agent [(agentId)]="fund.depositBank" [type]="'DB'" [disabled]="disabled" (onChange)="setDepositBankAgent($event)"></search-agent>
        </div>
        <label class="w-col-md-5 control-label">Custody fees(TTC)</label>
        <div class="form-group form-inline w-col-md-7">
            <percent-amount    [(percent)]="fund.bankDepositFee"
                               [(flatAmount)]="fund.depositBankFlatFee"
							   [(currency)]="fund.bankDepFeeCcy"
							   [(currencyList)]="currencyList"
							   [defaultCurrency]="defaultCurrency"
                               [disabled]="disabled">
            </percent-amount > 
        </div>        
    </div> 
  </div>  
</div>
