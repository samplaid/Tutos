// Grid system
//
// Generate semantic grid columns with these mixins.

// Generate the extra small columns
@mixin w-make-xs-column($columns, $gutter: $grid-gutter-width) {
  position: relative;
  float: left;
  width: percentage(($columns / $w-grid-columns));
  min-height: 1px;
  padding-left:  ($gutter / 2);
  padding-right: ($gutter / 2);
}
@mixin w-make-xs-column-offset($columns) {
  margin-left: percentage(($columns / $w-grid-columns));
}
@mixin w-make-xs-column-push($columns) {
  left: percentage(($columns / $w-grid-columns));
}
@mixin w-make-xs-column-pull($columns) {
  right: percentage(($columns / $w-grid-columns));
}

// Generate the small columns
@mixin w-make-sm-column($columns, $gutter: $grid-gutter-width) {
  position: relative;
  min-height: 1px;
  padding-left:  ($gutter / 2);
  padding-right: ($gutter / 2);

  @media (min-width: $screen-sm-min) {
    float: left;
    width: percentage(($columns / $w-grid-columns));
  }
}
@mixin w-make-sm-column-offset($columns) {
  @media (min-width: $screen-sm-min) {
    margin-left: percentage(($columns / $w-grid-columns));
  }
}
@mixin w-make-sm-column-push($columns) {
  @media (min-width: $screen-sm-min) {
    left: percentage(($columns / $w-grid-columns));
  }
}
@mixin w-make-sm-column-pull($columns) {
  @media (min-width: $screen-sm-min) {
    right: percentage(($columns / $w-grid-columns));
  }
}

