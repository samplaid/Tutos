<ng-container *ngIf="ac">
    <div class="agc">
        <div class="split-screen relative" >
            <div [ngBusy]="[busy]">
            <div class="agc-form container-fluid relative">
                <div [ngBusy]="subs">
                <section class="form-horizontal" *ngIf="!inModal">
                    <div class="row menu marginLeft3 nomarginRight">
                        <div class="row vertical-center-noline ">
                            <div class="text-nowrap col-md-10 paddingLeft12">
                                <div class="form-group">
                                    <label class="form-inline paddingLeft12"><h3>{{ title }}</h3></label>                                    
                                </div>                               
                            </div>                           
                            <div class="col-md-2">
                                <div class="pull-right paddingRight7">
                                    <button type="submit" class="btn btn-xs btn-primary" (click)="save()">
                                    <i class="fa fa-floppy-o"></i>Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <!-- / Banner contact creation -->

                <section [ngClass]="{'form':!inModal}">
                    <div class="row">
						<div class="col-md-12">	
							<ngbd-alert-container ref='agentContact'></ngbd-alert-container>
						</div>
                    </div>
                    <div class="agent-basic-identity">
                        <agent-identity-form [agent]="ac.contact" [mode]="mode">
                            <div class="form-group">
                                <label for="role" class="col-md-2 control-label">Function</label>
                                <div class="col-md-7">
                                    <select  name="role" class="form-control input-sm text-left" [(ngModel)]="ac.contactFunction" [desactive]="mode">
                                        <option *ngFor="let agf of typeOfAgentContacts" [value]="agf.keyValue">{{ agf.description }}</option>
                                    </select>
                                </div>
                            </div>
                        </agent-identity-form>
                    </div>
                                        
                    <div class="line-break"></div>
                    <div class="row">
                        <div class="title col-md-12">Address</div>
                    </div>
                    <div class="row">
                        <div class="paddingHorizontal5 contact-address">
                            <agent-address-form #agaForm [agent]="ac.contact" [mode]="mode"></agent-address-form>
                        </div>    
                    </div>
                    
                </section>
            </div>
            </div> 
            <!-- / agc-form container-fluid -->
        </div>
        </div>
    </div>
</ng-container>