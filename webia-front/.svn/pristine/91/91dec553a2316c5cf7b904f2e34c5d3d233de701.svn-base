<ngx-datatable class="wealins-theme" [rows]="accounts" [columnMode]="'flex'" [rowHeight]="'auto'" [headerHeight]="'auto'">
    <ngx-datatable-column [resizeable]="false" [sortable]="false" [flexGrow]="5">
        <ng-template ngx-datatable-header-template>Account No</ng-template>
        <ng-template let-row="row" ngx-datatable-cell-template>
            {{row.accountCode}}
        </ng-template>
    </ngx-datatable-column>
    <ngx-datatable-column [resizeable]="false" [sortable]="false" [flexGrow]="5">
        <ng-template ngx-datatable-header-template>Account Name</ng-template>
        <ng-template let-row="row" ngx-datatable-cell-template>
            {{row.accountName}}
        </ng-template>
    </ngx-datatable-column>
    <ngx-datatable-column [resizeable]="false" [sortable]="false" [flexGrow]="5">
        <ng-template ngx-datatable-header-template>Bank Name</ng-template>
        <ng-template let-row="row" ngx-datatable-cell-template>
            <span>{{ row.bankName}}</span>
        </ng-template>
    </ngx-datatable-column>
    <ngx-datatable-column [resizeable]="false" [sortable]="false" [flexGrow]="5">
        <ng-template ngx-datatable-header-template>Status</ng-template>
        <ng-template let-row="row" let-rowIndex="rowIndex" ngx-datatable-cell-template>
            {{row.status | optionDetail:status}}
        </ng-template>
    </ngx-datatable-column>
    <ngx-datatable-column *ngIf="hasEditRoles" [resizeable]="false" [sortable]="false" [flexGrow]="2">
        <ng-template ngx-datatable-header-template></ng-template>
        <ng-template let-row="row" ngx-datatable-cell-template>
            <button *ngIf="row.status == accountActiveStatus" title="Suspend" class="btn btn-xs btn-primary" type="button" (click)="suspend(row)">
                <i class="fa fa-minus" aria-hidden="true"></i>
            </button>
            <button *ngIf="row.status == accountSuspendedStatus" title="Activate" class="btn btn-xs btn-primary" type="button" (click)="activate(row)">
                <i class="fa fa-undo" aria-hidden="true"></i>
            </button>
        </ng-template>
    </ngx-datatable-column>
</ngx-datatable>