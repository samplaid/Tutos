package lu.wealins.enums;

/**
 * Contains the language enumeration
 * 
 * @author oro
 *
 */
public enum Language {

	FRENCH("fr", "fr-FRA"), ENGLISH("en", "en-ENG");

	private final String lang;
	private final String langTag;

	private Language(String lang, String langTag) {
		this.lang = lang;
		this.langTag = langTag;
	}

	/**
	 * Return the language in {@code ISO 639-1}<br>
	 * <br>
	 * E.g: <b>{@code fr}</b> for french language and <b>{@code en}</b> for english language
	 * 
	 * @return the language
	 */
	public String getLang() {
		return lang;
	}

	/**
	 * Return the language tag that indicates the country code<br>
	 * <br>
	 * E.g: <b>{@code fr-FRA}</b> for french language speaking in France and <b>{@code en-ENG}</b> for english language speaking in British England
	 * 
	 * @return the language
	 */
	public String getLangTag() {
		return langTag;
	}

}
