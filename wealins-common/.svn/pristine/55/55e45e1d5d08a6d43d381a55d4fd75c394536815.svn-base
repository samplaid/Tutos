package lu.wealins.common.rest;

/**
 * Common error response for rest response
 * 
 * @author xqv60
 *
 */
public class ServerError {

	/**
	 * The initial action
	 */
	private String action;

	/**
	 * The error
	 */
	private String error;

	/**
	 * Default constructor
	 */
	public ServerError() {

	}

	/**
	 * The default constructor with one parameter
	 * 
	 * @param error the error
	 */
	public ServerError(String error) {
		this.error = error;
	}

	/**
	 * The default constructor with two parameters
	 * 
	 * @param action the action
	 * @param error the error
	 */
	public ServerError(String action, String error) {
		this.action = action;
		this.error = error;
	}

	/**
	 * @return the action
	 */
	public String getAction() {
		return action;
	}

	/**
	 * @param action the action to set
	 */
	public void setAction(String action) {
		this.action = action;
	}

	/**
	 * @return the error
	 */
	public String getError() {
		return error;
	}

	/**
	 * @param error the error to set
	 */
	public void setError(String error) {
		this.error = error;
	}

}
