<jaxb:bindings xmlns:jaxb="http://java.sun.com/xml/ns/jaxb" version="2.0" xmlns:xjc="http://java.sun.com/xml/ns/jaxb/xjc" jaxb:extensionBindingPrefixes="xjc"
	xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<!-- Bug in JDK forces to use version instead of jaxb:version in the header. See http://www.java.net/node/702233 -->
	<jaxb:globalBindings>
		<!-- This enables the simple binding mode in JAXB. See http://weblogs.java.net/blog/kohsuke/archive/2006/03/why_does_jaxb_p.html -->
		<xjc:simple />
	</jaxb:globalBindings>
</jaxb:bindings>